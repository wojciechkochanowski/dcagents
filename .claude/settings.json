{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(C:/praca/llm/language-check-tool/language-check-tool)",
      "Bash(grep:*)",
      "Bash(for lang in de es it ja pt zh)",
      "Bash(do echo \"Adding to $lang.json:\")",
      "Bash(done)",
      "mcp__figma-dev-mode-mcp-server__get_image",
      "mcp__figma-dev-mode-mcp-server__get_code",
      "mcp__figma-dev-mode-mcp-server__get_variable_defs",
      "mcp__figma-dev-mode-mcp-server__get_code_connect_map",
      "mcp__puppeteer__puppeteer_navigate",
      "mcp__puppeteer__puppeteer_screenshot",
      "mcp__puppeteer__puppeteer_click",
      "mcp__puppeteer__puppeteer_fill",
      "mcp__puppeteer__puppeteer_select",
      "mcp__puppeteer__puppeteer_hover",
      "mcp__puppeteer__puppeteer_evaluate",
      "Bash(cd:*)",
      "Bash(pwd)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "mcp__snap-happy__TakeScreenshot",
      "Bash(C:/praca/llm/workitem-tool/workitem-tool:*)",
      "Bash(C:/praca/llm/review-comments/review-comments:*)",
      "Bash(cat:*)",
      "Bash(npx tsc:*)",
      "Bash(pnpm run:*)",
      "Bash(pnpm build:*)",
      "Bash(/dev/null)",
      "Bash(mv:*)",
      "Bash(gemini:*)",
      "Bash(pnpm dev:*)",
      "Bash(curl:*)",
      "Bash(for file in C:/praca/datacapt/frontend/common/intl/*.json)",
      "Bash(do echo \"Checking $file...\")",
      "Bash(sed:*)",
      "Bash(C:/praca/llm/language-check-tool/language-check-tool)",
      "Bash(C:/praca/datacapt/dcagents/tools/diff-xml)",
      "Bash(xmllint:*)"
    ],
    "deny": ["Bash(jq:*)", "Bash(for:*)"],
    "defaultMode": "acceptEdits",
    "additionalDirectories": ["$env:USERPROFILE\\Desktop"]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File C:/praca/datacapt/dcagents/.claude/hooks/pre-subagent.ps1"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit|Write|Read|Bash|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File C:/praca/datacapt/dcagents/.claude/hooks/pre-edit.ps1"
          }
        ]
      },
      {
        "matcher": "mcp__figma-dev-mode-mcp-server__.*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File C:/praca/datacapt/dcagents/.claude/hooks/pre-figma.ps1"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File C:/praca/datacapt/dcagents/.claude/hooks/track-instructions-read.ps1"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit|Write|Update",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File C:/praca/datacapt/dcagents/.claude/hooks/post-edit-universal.ps1"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File C:/praca/datacapt/dcagents/.claude/hooks/post-subagent.ps1"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File C:/praca/datacapt/dcagents/.claude/hooks/clear-readed.ps1"
          }
        ]
      }
    ],
    "UserPromptSubmit": [],
    "Stop": []
  },
  "outputStyle": "Datacapt Developer"
}
